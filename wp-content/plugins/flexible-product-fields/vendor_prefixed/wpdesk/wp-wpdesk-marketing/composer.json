{
    "name": "wpdesk\/wp-wpdesk-marketing",
    "description": "WPDesk Marketing",
    "license": "MIT",
    "keywords": [
        "wpdesk",
        "marketing"
    ],
    "homepage": "https:\/\/gitlab.com\/wpdesk\/library\/wp-wpdesk-marketing",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "piotr.potrebka",
            "email": "piotr.potrebka@wpdesk.net"
        }
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2.5"
        },
        "allow-plugins": {
            "dealerdirect\/phpcodesniffer-composer-installer": true,
            "phpstan\/extension-installer": true
        }
    },
    "require": {
        "php": ">=7.2.5 | ^8",
        "ext-json": "*",
        "psr\/log": "^1.1.0",
        "wpdesk\/wp-view": "^2.0"
    },
    "require-dev": {
        "10up\/wp_mock": "*",
        "mockery\/mockery": "*",
        "phpunit\/phpunit": "^8 | ^9",
        "wpdesk\/phpstan-rules": "^1.1",
        "wpdesk\/wp-code-sniffer": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "VendorFPF\\WPDesk\\Library\\Marketing\\": "src"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpunit-unit": "phpunit --configuration phpunit-unit.xml --coverage-text --colors=never",
        "phpunit-unit-fast": "phpunit --configuration phpunit-unit.xml --no-coverage",
        "phpunit-integration": "phpunit --configuration phpunit-integration.xml --coverage-text --colors=never",
        "phpunit-integration-fast": "phpunit --configuration phpunit-integration.xml --no-coverage"
    }
}